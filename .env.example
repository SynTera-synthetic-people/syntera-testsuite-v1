ENVIRONMENT=development
DEBUG=false
# Local dev: SQLite (no PostgreSQL required). For production/docker use PostgreSQL.
DATABASE_URL=sqlite:///./syntera.db
# DATABASE_URL=postgresql://syntera:password@localhost:5432/syntera
SECRET_KEY=your-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BATCH_SIZE=32
NUM_WORKERS=4
LOG_LEVEL=INFO

